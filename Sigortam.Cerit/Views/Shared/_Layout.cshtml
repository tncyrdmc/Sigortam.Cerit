    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sigortam.Cerit</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Sigortam.Cerit.styles.css" asp-append-version="true" />
</head>
<body class="backGroundColor">
    <div class="sidebar close">

        <div class="logo-details">
            <i class='bx bxl-c-plus-plus' asp-controller="Insurance" asp-action="Index"></i>
            @*<img class="bx" src="~/img/Sigortam. (2).png" width="70" height="60"/>*@
            <span class="logo_name">SIGORTAM.CERIT</span>
        </div>
        <ul class="nav-links">
            <li>
                <a asp-controller="Insurance" asp-action="Index">
                    <i class='bx bx-grid-alt'></i>
                    <span class="link_name">Tüm Sigortalar</span>
                </a>
                <ul class="sub-menu blank">
                    <li><a class="link_name" asp-controller="Insurance" asp-action="Index">Sigortam İşlemlerim</a></li>
                </ul>
            </li>
            <li>
                <div class="iocn-link">
                    <a asp-controller="InsuranceCompany" asp-action="Index">
                        <i class='bx bx-collection'></i>
                        <span class="link_name">Category</span>
                    </a>
                    <i class='bx bxs-chevron-down arrow'></i>
                </div>
                <ul class="sub-menu">
                    <li><a class="link_name" asp-controller="InsuranceCompany" asp-action="Index">Sigorta Şirketleri</a></li>
                    @*                    <li><a href="#">HTML & CSS</a></li>
                        <li><a href="#">JavaScript</a></li>
                        <li><a href="#">PHP & MySQL</a></li>*@
                </ul>
            </li>
            <li>
                <div class="iocn-link">
                    <a href="#">
                        <i class='bx bx-book-alt'></i>
                        <span class="link_name">Posts</span>
                    </a>
                    <i class='bx bxs-chevron-down arrow'></i>
                </div>
                <ul class="sub-menu">
                    <li><a class="link_name" href="#">Posts</a></li>
                    <li><a href="#">Web Design</a></li>
                    <li><a href="#">Login Form</a></li>
                    <li><a href="#">Card Design</a></li>
                </ul>
            </li>
            <li>
                <a href="#">
                    <i class='bx bx-pie-chart-alt-2'></i>
                    <span class="link_name">Analytics</span>
                </a>
                <ul class="sub-menu blank">
                    <li><a class="link_name" href="#">Analytics</a></li>
                </ul>
            </li>
            <li>
                <a asp-controller="Dashboard" asp-action="Index">
                    <i class='bx bx-line-chart'></i>
                    <span class="link_name">Chart</span>
                </a>
                <ul class="sub-menu blank">
                    <li><a class="link_name" asp-controller="Dashboard" asp-action="Index">Chart</a></li>
                </ul>
            </li>
            <li>
                <div class="iocn-link">
                    <a href="#">
                        <i class='bx bx-plug'></i>
                        <span class="link_name">Plugins</span>
                    </a>
                    <i class='bx bxs-chevron-down arrow'></i>
                </div>
                <ul class="sub-menu">
                    <li><a class="link_name" href="#">Plugins</a></li>
                    <li><a href="#">UI Face</a></li>
                    <li><a href="#">Pigments</a></li>
                    <li><a href="#">Box Icons</a></li>
                </ul>
            </li>
            <li>
                <a href="#">
                    <i class='bx bx-compass'></i>
                    <span class="link_name">Explore</span>
                </a>
                <ul class="sub-menu blank">
                    <li><a class="link_name" href="#">Explore</a></li>
                </ul>
            </li>
            <li>
                <a asp-controller="Barcode" asp-action="Reader">
                    <i class='bx bx-history'></i>
                    <span class="link_name">Barcode</span>
                </a>
                <ul class="sub-menu blank">
                    <li><a class="link_name" asp-controller="Barcode" asp-action="Reader">Barcode</a></li>
                </ul>
            </li>
            <li>
                <a asp-controller="Setting" asp-action="Index">
                    <i class='bx bx-cog'></i>
                    <span class="link_name">Setting</span>
                </a>
                <ul class="sub-menu blank">
                    <li><a class="link_name" asp-controller="Setting" asp-action="Index">Setting</a></li>
                </ul>
            </li>
            <li>
                <div class="profile-details">
                    <div class="profile-content">
                        <img src="~/img/profile.png" alt="profileImg">
                    </div>
                    <div class="name-job">
                        <div class="profile_name">Mustafa ÖZCERİT</div>
                        <div class="job">Web Desginer</div>
                    </div>
                    <i class='bx bx-log-out'></i>
                </div>
            </li>
        </ul>
    </div>
    <div class="body-container" style="height:110%">
        @*<main role="main" class="pb-3">*@
        <div class="app-content-actions row" style="margin-left:70%">
            <div class="app-content-actions-wrapper col-md-12" style="margin-left:60%">
                <div>
                    <button class="mode-switch" title="Mod değiştir" style="color:red">
                        <svg class="moon" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" width="24" height="24" viewBox="0 0 24 24">
                            <defs></defs>
                            <path d="M21 12.79A9 9 0 1111.21 3 7 7 0 0021 12.79z"></path>
                        </svg>
                    </button>
                </div>
                <div style="margin:3px"></div>
                @if (SignInManager.IsSignedIn(User))
                {
                    <div class="">
                        <a asp-controller="Login" asp-action="Logout" title="Kullanıcı çıkışı" style="color:red">
                            <img src="~/img/logout.png" />
                        </a>
                    </div>
                    <div style="margin:3px"></div>
                    <div class="">
                        <p class="app-content-headerText" style="font-size:15px">
                            @UserManager.GetUserName(User)
                        </p>
                    </div>
                    <div style="margin:15px"></div>
                }
            </div>
            <div class="app-content-actions-wrapper col-md-12">
                <div hidden="hidden" class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>Başarılı:</strong> Süresi yaklaşan kayıtlar başarılı bir şekilde getirildi.
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div hidden="hidden" class="alert alert-danger alert-dismissible fade show" role="alert">
                    <strong>Hata:</strong> Süresi yaklaşan kayıtlar başarılı bir şekilde getirildi.
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div hidden="hidden" class="alert alert-warning alert-dismissible fade show" role="alert">
                    <strong>Uyarı:</strong> Süresi yaklaşan kayıtlar başarılı bir şekilde getirildi.
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
        </div>


        @RenderBody()
        @*</main>*@
    </div>
    <section class="home-section">
        <div class="home-content">
            @*<i class='bx bx-menu' ></i>*@
            @*<span class="text">Drop Down Sidebar</span>*@
        </div>
    </section>
    <script>
        let arrow = document.querySelectorAll(".arrow");
        for (var i = 0; i < arrow.length; i++) {
          arrow[i].addEventListener("click", (e)=>{
         let arrowParent = e.target.parentElement.parentElement;//selecting main parent of arrow
         arrowParent.classList.toggle("showMenu");
          });
        }
        let sidebar = document.querySelector(".sidebar");
        let sidebarBtn = document.querySelector(".bx-menu");
        console.log(sidebarBtn);
        sidebarBtn.addEventListener("click", ()=>{
          sidebar.classList.toggle("close");
        });
    </script>

